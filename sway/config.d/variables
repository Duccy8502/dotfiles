# shift   = Left Shift (0x32), Right Shift (0x3E)
# lock    = Capslock (0x42)
# control = Left Control (0x25), Right Control (0x69)
# mod1    = Left Alt (0x40), Right Alt (0x6C), Left Meta (0xCD)
# mod2    = Numlock (0x4D)
# mod3    = N/A
# mod4    = Left Super (0x85)[1]. Right Super (0x86)[1], Left Super (0xCE)[1.1], Left Hyper (0xCF)
# mod5    = ISO level3 Shift (0x5C), Mode switch[2] (0xCB)
#
# [1] Sometimes called Win or the "Windows key"
# 	[1.1] Unknown key
# [2] Sometimes called AltGr

set $mod Mod1

# set primary and secondary terminal
set $term alacritty
set $term2 kitty
set $term3 /home/user/Git/st/st

# set primary browser
set $browser 'env MOZ_ENABLE_WAYLAND=1 firefox'

# set terminal multiplexer
set $multiplex tmux

# set screenshot utility
set $scrshot 'sleep 0.2; grimshot copy area'

# set status bar
set $bar waybar

set $up Up
set $down Down
set $left Left
set $right Right
